module Test;

import parsers/http;

export type EatAll = unit {
    %mimetype = "*";

    data: bytes &chunked &eod { self.c = self.c + |self.data|; }

    var c: uint64;

    on %init {
        self.c = 0;
        }

    on %done {
        print "SIZE", self.c;
        }
};

@TEST-START-FILE generate.awk
BEGIN {
    print "HTTP/1.1 200 OK"
    print "Content-Type: application/octet-stream"
    print "Transfer-Encoding: chunked"
    print ""

    for ( i = 0; i < 100; i++ ) {
        printf("400\x0d\x0a");
        for ( j = 0; j < 1024; j++ )
            printf("A");
        printf("\x0d\x0a");
        }

    printf("0\x0d\x0a");
    printf("\x0d\x0a");
    }
@TEST-END-FILE
