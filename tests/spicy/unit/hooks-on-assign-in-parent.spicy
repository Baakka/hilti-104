module Mini;

export type test = unit {
    a: bytes &length=4;
    foo: Foo(self);
    b: bytes &length=6;

    var s: bytes;

    on a { print "Hook A", self; }
    on s { print "Hook S", self; }

    on %done { print self; }
};

type Foo = unit(t: test) {
    i: int8 {
        print self;
        t.a = b"new-value";
        t.s = b"new-value";
    }
};
