#! /usr/bin/env bash

if [ $# != 1 ]; then
    echo "usage: `basename $0` <trace>"
    exit 1
fi

trace=$1
scripts=`dirname $0`/http-events.bro
seed=`dirname $0`/random.seed

export BRO_SEED_FILE=$seed

echo === Running Spicy Bro ...
time bro -Q -r ${trace} http.evt ${scripts} HTTPEvents::log_events=F HTTPEvents::spicy=T

echo === Running standard Bro ...
time bro -Q -r ${trace} ${scripts} HTTPEvents::log_events=F HTTPEvents::spicy=F

